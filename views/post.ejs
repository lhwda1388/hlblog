<!-- Set your background image for this header on the line below. -->
<div ng-controller="postDetailCtrl">
  <header class="intro-header" style="background-image: url('/public/images/post-bg.jpg')">
      <div class="container">
          <div class="row">
              <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                  <div class="post-heading">
                      <h1><%=post_data.title%></h1>
                      <h2 class="subheading"><%=post_data.usr_path%></h2>
                      <span class="meta">Posted by <a href="#"><%=post_data.usr_email%></a> on {{ convertDate('<%=post_data.reg_dt%>') }}</span>
